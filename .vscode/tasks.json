{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
        "label": "Run PowerShell Analysis & Import",
        "type": "shell",
        "command": ". ${workspaceFolder}/config/make.ps1 -Task Init, PowershellAnalysis, PowershellImport",
        "group": {
            "kind": "build"
        },
        "presentation": {
            "reveal": "silent",
            "panel": "shared"
        },
        "options": {
            "shell": {
                "executable": "/usr/bin/pwsh",
                "args": [
                    "-NoLogo",
                    "-NoProfile",
                    "-Command"
                ]
            }
        },
        "windows": {
            "options": {
                "shell": {
                    "executable": "powershell.exe",
                    "args": [
                        "-NoLogo",
                        "-NoProfile",
                        "-ExecutionPolicy",
                        "Bypass",
                        "-Command"
                    ]
                }
            },
            "command": ".\\config\\make.ps1 -Task Init, PowershellAnalysis, PowershellImport"
        }
    },
    {
        "label": "Run .NET Solution, Project, Clean, Restore, Build & Publish",
